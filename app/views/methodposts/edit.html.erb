<div class="methodpost_new_content">
  <div class="methodpost_new_container">
   <%= form_with(model: @methodpost, local: true) do |f| %>
   <% if @methodpost.errors.any? %>
    <ul>
      <% @methodpost.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
   <% end %>
   <div class="form_box flex">
      <h3><%= f.label :科目 %></h3>
      <%= f.select :subjects, [["国語","国語"],["現代文", "現代文"], ["古文", "古文"], ["漢文", "漢文"],
                              ["数学","数学"],["数学I・A", "数学I・A"], ["数学II・B", "数学II・B"], ["数学III", "数学III"],
                              ["英語","英語"],["英単語", "英単語"],["英文法", "英文法"],["英文解釈","英文解釈"],["英長文", "英長文"],["リスニング","リスニング"],
                              ["日本史","日本史"],["世界史", "世界史"], ["倫理", "倫理"], ["政治経済", "政治経済"],["地理","地理"],["現代社会","現代社会"],
                              ["物理","物理"],["化学", "化学"], ["生物", "生物"],["地学","地学"],["過去問","過去問"]] %>
    </div>
    <div class="form_box">
      <h3><%= f.label :タイトル %></h3>
      <%= f.text_area :title, class: 'form_title' %>
    </div>
    <div class="form_box">
      <h3><%= f.label :内容 %></h3>
      <%= f.text_area :content, class: 'form_content' %>
    </div>
    <%= f.submit "投稿編集", class: "methodpost_submit" %>
    <% end %>
  </div>
</div>
