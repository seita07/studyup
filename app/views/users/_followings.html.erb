<% if @follower_users %>
    <ul class="follow_ul">
    <% @follower_users.each do |follower_user| %>
    <li>
        <div class="follow_user_box">
        <% if follower_user.image? %>
            <%= link_to "/users/#{follower_user.id}" do %>
              <%= image_tag @user.image.url,class: "follow_user" %>
            <% end %>
          <% else %>
            <%= link_to "/users/#{follower_user.id}" do %>
              <%= image_tag '/default.png' ,class:"follow_user"%>
            <% end %>
          <% end %>
        <%= link_to "#{follower_user.name}", user_path %>
        </div>
        <% if user_signed_in? %>
            <%= render "relationships/follow_button", user: follower_user %>
        <% end %>
    </li>
    <% end%>
    </ul>
<% end%>