<%= javascript_pack_tag 'application' %>

<h1>ユーザーID：<%= @user.id %>,<%= @user.name %>の詳細ページ</h1>
<% if user_signed_in? %>
  <%= render "relationships/follow_button", user: @user %>
<% end %>
<%@following_users = @user.followings%> 
<%@follower_users = @user.followers%>
<%= @following_users.count %>フォロー,<%= @follower_users.count %>フォロワー
<div class="tab-area">
  <div class="tab active">
    ユーザー情報
  </div>
  <div class="tab">
    フォロー覧
  </div>
  <div class="tab">
    フォロワー一覧
  </div>
  <div class="tab">
    レポート
  </div>
  <div class="tab">
    タイムライン
  </div>
</div>
<div class="content-area">
  <div class="content show">
   <%= render "users/detail" %>
  </div>
  <div class="content">
      <% if @following_users %>
        <% @following_users.each do |following_user| %>
        <%= link_to "#{following_user.name}", user_path %>
        <% end%>
      <% end%>
  </div>
  <div class="content">
    <% if @follower_users %>
      <% @follower_users.each do |follower_user| %>
      <%= link_to "#{follower_user.name}", user_path %>
      <% end%>
    <% end%>
  </div>
  <div class="content">
    <%= render "users/report" %>
  </div>
  <div class="content">
    <%= render "users/timepost" %>
  </div>
</div>
