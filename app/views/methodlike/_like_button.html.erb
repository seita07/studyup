<% if user_signed_in? %>
  <% @methodlikes_count = MethodLike.where(methodpost_id: methodpost.id).count %>
    <% if @methodlike = MethodLike.find_by(user_id: current_user.id, methodpost_id: methodpost.id) %>
      <%= button_to  "/methodposts/#{methodpost.id}/methodlike/#{@methodlike.id}", { method: :delete, class: "ungood_button" } do %>
        <i class="fas fa-thumbs-up ungood-btn"><%= @methodlikes_count %></i>
      <% end %>
      <% else %>
        <%= button_to  "/methodposts/#{methodpost.id}/methodlike", { method: :post, class: "good_button" } do %>
          <i class="fas fa-thumbs-up good-btn"><%= @methodlikes_count %></i>
        <% end %>
      <% end %>
<% end %>