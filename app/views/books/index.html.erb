<div class='book_content'>
  <div class="book_content_head">
  <%= form_tag('/books', method: :get) do %>
      <%= text_field_tag :book, "",  id: "book_search", name: "keyword", placeholder: "参考書を探しましょう(例：英単語)" %>
      <button title="検索" type="submit">検索</button>
  <% end %>
  </div>
  <div class="book_container">
    <h2>検索結果</h2>
    <ul>
      <%= render partial: 'book_list' %>
    </ul>
  </div>
</div>